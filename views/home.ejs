<h1>Home sweet home</h1>

<p>
    <%= homeContent %>
</p>

<% postList.forEach((post)=> { %>
    <article class="post-card">
        <a href="/posts/<%= post.title %>">
            <h2>
                <%= post.title %>
            </h2>
        </a>
        <p>
            <%= post.body.substr(0, 100) %>
                <% if (post.body.length> 100){%> <a href="/posts/<%= post.title %>">... Read More</a>
                    <% } %>
        </p>
    </article>
    <%}) %>